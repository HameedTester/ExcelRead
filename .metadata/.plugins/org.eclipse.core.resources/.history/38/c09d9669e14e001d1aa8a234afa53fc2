package starPattern;

public class MethodsInJava {
	int a=10; // Global Variables
	int b=20;


	public void addNumbers()
	{

		System.out.println(a+b);
	}


	public void subNumbers(int a, int b)//local variables
	{


	}

	public int mulNumbers()
	{

		return a*b;

	}

	public returnType divNumbers(int a, int b)
	{

		return a/b;

	}

	public static void main(String[] args) {

		MethodsInJava m = new MethodsInJava();
		m.addNumbers();
		m.subNumbers(20, 30);
		m.mulNumbers();
		m.divNumbers(40, 20);

	}
}

