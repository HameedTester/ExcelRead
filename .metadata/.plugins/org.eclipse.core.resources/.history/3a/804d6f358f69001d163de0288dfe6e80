	public void softAssert()
	{

		System.out.println("Hi this is Soft Assert");
		String s1="Chrompet";
		String s2="Velachery";

		//syntax for Soft Assert

		SoftAssert s = new SoftAssert();
		s.assertEquals(s1, s2);
		System.out.println("Both the Strings are not equals");
		System.out.println("Soft Assert allows even the failed test cases");










	}


}
